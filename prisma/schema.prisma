generator client {
  provider   = "prisma-client"
  output     = "./generated"
}

datasource db {
  provider = "postgresql"
}

model signals {
  id          Int      @id @default(autoincrement())
  source      String
  serviceKey  String
  type        String
  severity    String
  processed   Boolean   @default(false)
  metricValue Float?
  threshold   Float?
  reason      String?
  alarmName   String?
  region      String?
  window      String?
  timestamp   DateTime @default(now())
  createdAt   DateTime @default(now())
  incident    incidents? @relation(fields: [incidentId], references: [id])
  incidentId  Int?
}

model incidents {
  id              Int      @id @default(autoincrement())
  serviceKey      String
  severity        String
  status          String   @default("open") // "open", "acknowledged", "resolved"
  description     String?
  acknowledgedAt  DateTime?
  createdAt       DateTime @default(now())
  resolvedAt      DateTime?
  signals         signals[]
}
