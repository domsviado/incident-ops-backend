generator client {
  provider   = "prisma-client"
  output     = "./generated"
}

datasource db {
  provider = "postgresql"
}

model signals {
  id          Int      @id @default(autoincrement())
  source      String
  serviceKey  String
  type        String
  severity    String
  processed   Boolean   @default(false)
  metricValue Float?
  threshold   Float?
  reason      String?
  alarmName   String?
  region      String?
  window      String?
  timestamp   DateTime @default(now())
  createdAt   DateTime @default(now())
  incident    incidents? @relation(fields: [incidentId], references: [id])
  incidentId  Int?
}

model incidents {
  id          String   @id @default(uuid())
  title       String
  description String?
  status      IncidentStatus @default(OPEN)
  severity    Severity
  serviceKey  String

  acknowledgedBy String?
  acknowledgedAt DateTime?
  resolvedAt     DateTime?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  signals   signals[]

  @@index([status])
  @@index([severity])
  @@index([serviceKey])
  @@index([createdAt])
}

enum IncidentStatus {
  open
  acknowledged
  resolved
}
